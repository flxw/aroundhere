html, body
  width 100%
  height 100%
  font-family 'Open Sans', sans-serif

h1, h2, h3, h4, h5
  font-family 'Josefin Sans', sans-serif

#map
  height 100%
  width 100%

#searchBar
  position absolute
  top 2em
  z-index 1000

  input
    width 80%

  @media screen and (max-width: 680px)
    left 15%
    width 70%
  @media screen and (min-width: 680px)
    left 5%
    width 80%

.slider
  overflow-x hidden
  overflow-y auto
  max-height 275px

.slider img
  max-width 300px

#settingsPanel
  display none
  box-shadow 0 1px 5px rgba(0,0,0,0.65)
  border-radius 4px
  background-color #fff
  position absolute
  width 200px
  height 50px
  bottom 26px
  right 46px

//  control css
.leaflet-touch .leaflet-bar-part-single
  -webkit-border-radius 7px 7px 7px 7px
  border-radius 7px 7px 7px 7px
  border-bottom none

.leaflet-touch .leaflet-control-locate
  box-shadow none
  border 2px solid rgba(0, 0, 0, 0.2)
  background-clip padding-box

.leaflet-control-locate a,
.leaflet-control-filter a
  font-size 1.4em
  margin-left 1px
  color #444

.leaflet-control-locate.active a
  color #2074B6

.leaflet-control-locate.active.following a
  color #FC8428

.leaflet-control-filter.active a
  color #FC8428

.leaflet-control-filter.ready a
  color #2074B6