helvetica = Helvetica, Arial, sans-serif

html, body
  height 100%
  width 100%
  max-width 100%
  max-height 100%
  background-color #f9f9f9
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  font-family RobotoDraft, 'Helvetica Neue', Helvetica, Arial

.hidden
  displaynone

#currentlocation-container
  position relative
  width 100%
  height 40%

#google-map
  position relative
  width 100%
  height 90%

#currentlocation-banner
  position relative
  top -20%
  height 30%
  padding 16px
  background-color #fff
  box-shadow 0px 2px 5px 0px rgba(0,0,0,0.75)

#card-area
  position relative
  top -1em
  padding 1em

#action-button
  position fixed
  right 1em
  bottom 1em
  cursor pointer

.card-padding
  padding 16px

.card
  position relative
  vertical-align top
  background-color #fff
  margin-bottom 1em
  box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.24)

  & > img
    display inline-block
    max-width 20%
  & > .description
    display inline-block
    width 70%

  & > img.detail
    display block
    max-width none
    width 100%

.floating-action-button
  border-radius 50%
  width 3em
  height 3em
  background #751200

  .height-fix
    color #fff
    position absolute
    font-size 1.5em
    width: 100%;
    text-align: center;
    line-height: 2em;
    font-size: 1.5em;