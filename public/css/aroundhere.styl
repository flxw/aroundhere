helvetica = Helvetica, Arial, sans-serif

html, body
  height 100%
  width 100%
  max-width 100%
  max-height 100%
  background-color #f9f9f9
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  font-family Roboto, 'Helvetica Neue', helvetica

.hidden
  display none

#currentlocation-container
  position relative
  width 100%
  height 15em

#map
  position relative
  display block
  width 100%
  height 8em

#currentlocation-banner
  position relative
  display block
  height 5em
  padding 1em
  background-color #2196F3
  box-shadow 0px 2px 5px 0px rgba(0,0,0,0.75)

  & > h1
    font-size 2em
    font-weight 100
    color #e0e0e0
    margin 0

  & > p
    font-size 1.2
    color #fff
    margin 0
    margin-left 1em

#card-area
  padding 1em

#action-button
  position fixed
  right 1em
  bottom 1em
  cursor pointer

.card-padding
  padding 16px

.card
  position relative
  vertical-align top
  background-color #fff
  margin-bottom 1em
  box-shadow 0 2px 10px 0 rgba(0,0,0,0.24),0 2px 10px 0 rgba(0,0,0,0.24)

  & > img
    display inline-block
    max-width 20%
  & > .description
    display inline-block
    width 70%

  & > img.detail
    display block
    max-width none
    width 100%

.floating-action-button
  border-radius 50%
  width 3em
  height 3em
  background #2196F3

  .height-fix
    color #fff
    position absolute
    font-size 1.5em
    width: 100%;
    text-align: center;
    line-height: 2em;
    font-size: 1.5em;