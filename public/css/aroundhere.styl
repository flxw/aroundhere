helvetica = Helvetica, Arial, sans-serif

html, body
  height 100%
  width 100%
  max-width 100%
  max-height 100%
  background-color #f9f9f9
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  font-family RobotoDraft, 'Helvetica Neue', Helvetica, Arial

.hidden
  display:none

#currentlocation-container
  position relative
  width 100%
  height 40%

#google-map
  position relative
  width 100%
  height 90%

#currentlocation-banner
  position relative
  top -20%
  height 30%
  padding 16px
  background-color #fff
  box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.75)

#card-area
  position relative
  top -1em
  padding 1em

#action-button
  position fixed
  right 1em
  bottom 1em

section
  padding 30px 25px
  & > *
    margin 10px

.button
  display inline-block
  position relative
  width 120px
  height 32px
  line-height 32px
  border-radius 2px
  font-size 0.9em
  background-color #fff
  color #646464
  & > paper-ripple
    border-radius 2px
    overflow hidden
  &.narrow
    width 60px
  &.grey
    background-color #eee
  &.blue
    background-color #4285f4
    color #fff
  &.green
    background-color #0f9d58
    color #fff
  &.raised
    transition box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    transition-delay 0.2s
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)
    &:active
      box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.2)
      transition-delay 0s

.icon-button
  position relative
  display inline-block
  width 56px
  height 56px
  & > core-icon
    margin 16px
    transition -webkit-transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    transition transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  &:hover
    & > core-icon
      -webkit-transform scale(1.2)
      transform scale(1.2)
  & > paper-ripple
    overflow hidden
    color #646464
  &.red
    & > core-icon
      &::shadow
        path
          fill #db4437
    & > paper-ripple
      color #db4437
  &.blue
    & > core-icon
      &::shadow
        path
          fill #4285f4
    & > paper-ripple
      color #4285f4

.fab
  position relative
  display inline-block
  width 56px
  height 56px
  border-radius 50%
  color #fff
  overflow hidden
  transition box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  transition-delay 0.2s
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  &.red
    background-color #d23f31
  &.blue
    background-color #4285f4
  &.green
    background-color #0f9d58
  &:active
    box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.2)
    transition-delay 0s
  & > core-icon
    margin 16px
    &::shadow
      path
        fill #fff

.menu
  display inline-block
  width 180px
  background-color #fff
  box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.2)
  &.blue
    & > .item
      color #4285f4

.item
  position relative
  height 48px
  line-height 48px
  color #646464
  font-size 0.9em

.card, .dialog
  position relative
  vertical-align top
  background-color #fff
  box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.24)
  padding 16px
  /*display inline-block
  width 300px
  height 240px*/

.card
  margin-bottom 1em
  clear both

  & > img
    max-height 10em
    max-width 20%
  & > .description
    float right
    width 70%
    margin 0% 5%

.dialog
  box-sizing border-box
  & > .content
    height 170px
    font-size 0.9em
    & > .title
      font-size 1.3em
  & > .button
    width 90px
    float right

.center
  text-align center

.label
  padding 0 16px

.label-blue
  color #4285f4

.label-red
  color #d23f31

