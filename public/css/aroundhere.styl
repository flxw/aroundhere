html, body
  height 100%
  width 100%
  max-width 100%
  max-height 100%
  background-color #f9f9f9
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  font-family Roboto, 'Helvetica Neue', Helvetica, Arial, sans-serif

.hidden
  display none

#currentlocation-container
  position relative
  background-color #2196F380
  width 100%
  height 15em

  @media screen and (min-width: 680px)
    clear both
    box-shadow 0px 2px 2px 0px rgba(0,0,0,0.75)


#currentlocation-banner
  position relative
  background-color #2196F3

  @media screen and (max-width: 680px)
    padding 1em
    height 5em
    box-shadow 0px 2px 2px 0px rgba(0,0,0,0.75), 0px 0px 5px 0px rgba(0,0,0,0.75)

  @media screen and (min-width: 680px)
    padding 5em 0em
    height 5em
    width 70%
    float left

  & > h1
    font-size 2em
    font-weight 100
    color #e0e0e0
    margin 0
    margin-left 2em

  & > p
    font-size 1.2
    color #fff
    margin 0
    margin-left 5em

#map
  position relative
  overflow hidden

  @media screen and (max-width: 680px)
    display block
    width 100%
    height 8em

  @media screen and (min-width: 680px)
    height: 15em
    width 30%
    float right

  img
    display block
    margin 0 auto

#card-area
  max-width: 1000px
  margin: 0 auto

#action-button
  position fixed
  right 1em
  bottom 1em
  cursor pointer

.col-3
  display block

  @media screen and (min-width: 680px)
    float left
    padding 1%
    width 31.3%

  @media screen and (max-width: 680px)
    clear both
    width 100%

.card
  position relative
  background-color #fff
  box-shadow 0 2px 10px 0 rgba(0,0,0,0.24),0 2px 10px 0 rgba(0,0,0,0.24)

  & > img
    display inline-block
    max-width 20%
  & > .description
    display inline-block
    width 70%

  & > img.detail
    display block
    max-width none
    width 100%

  @media screen and (min-width: 680px)
    margin-bottom 6.5%

  @media screen and (max-width: 680px)
    margin 1em


.card.padded
  padding 16px

.floating-action-button
  border-radius 50%
  width 3em
  height 3em
  background #2196F3

  .height-fix
    color #fff
    position absolute
    font-size 1.5em
    width: 100%;
    text-align: center;
    line-height: 2em;
    font-size: 1.5em;