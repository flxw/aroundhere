helvetica = Helvetica, Arial, sans-serif

html, body
  height 100%
  width 100%
  max-width 100%
  max-height 100%
  background-color #EEE

#google-map
  width 100%
  height 40%

#card-area
  position relative
  top -3em
  padding 1em

.card
  background-color #fff
  box-shadow: 0 3px 10px rgba(0,0,0,.23),0 3px 10px rgba(0,0,0,.16);
  border-radius 2px;
  padding 19px
  margin-bottom 1em

